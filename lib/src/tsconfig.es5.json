{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "baseUrl": ".",
    "importHelpers": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": ".",
    "lib": ["es6", "es2015", "dom"],
    "skipLibCheck": true,
    "types": []
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipMetadataEmit": false,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "pearson-angular-material.js",
    "flatModuleId": "@pearson/angular-material"
  },
  "files": [
    "./public-api.ts",
    "typings.d.ts"
  ]
}
